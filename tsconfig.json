{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "amd",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "moduleResolution": "node",
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@app/components": ["./src/components"],
      "@app/pages": ["./src/pages"],
      "@typescript/interfaces": ["./src/typescript/interfaces/"],
      "@typescript/types": ["./src/typescript/types/"]
    }
  },
  "include": [
    "src",
    "setupEnzyme.ts",
    "jest.config.js",
    "config"
  ],
  "exclude": [
    "node_modules"
  ]
}
